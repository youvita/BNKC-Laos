<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#616263">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_solid_ffffff_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/gallery"
                style="@style/font15_263238_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawablePadding="@dimen/padding_20dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:letterSpacing="0.01"
                android:paddingStart="@dimen/padding_20dp"
                android:paddingTop="@dimen/padding_30dp"
                android:paddingEnd="@dimen/padding_20dp"
                android:paddingBottom="@dimen/padding_15dp"
                android:text="@string/gallery"
                app:drawableStartCompat="@drawable/ic_gallery_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/camera"
                style="@style/font15_263238_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawablePadding="@dimen/padding_20dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:letterSpacing="0.01"
                android:paddingStart="@dimen/padding_20dp"
                android:paddingTop="@dimen/padding_15dp"
                android:paddingEnd="@dimen/padding_20dp"
                android:paddingBottom="@dimen/padding_30dp"
                android:text="@string/camera"
                app:drawableStartCompat="@drawable/ic_photo_camera"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gallery" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>