<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_stroke_e1e5ec_solid_ffffff_corner_8"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:paddingRight="15dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/tv_full_payment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Repayment (A+B+C+D)" />

        <TextView
            android:id="@+id/tv_full_payment_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableStart="@drawable/ic_payment_red_ico"
            android:drawablePadding="10dp"
            android:text="1,215,000,000 Kip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#eef5f8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_info_ico"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="Total Repayment Details" />

        <!-- Principle (A)-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:minHeight="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="Principal (A)" />

            <TextView
                android:id="@+id/tv_principle_a"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="3,555.00 Kip" />
        </LinearLayout>

        <!-- Interest (B) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="Interest (B)" />

            <TextView
                android:id="@+id/tv_interest_b"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="3,555.00 Kip" />
        </LinearLayout>

        <!-- Admin Fee (C) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="Early Repayment Fee (C)" />

            <TextView
                android:id="@+id/tv_admin_fee_c"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="3,555.00 Kip" />
        </LinearLayout>

        <!-- Other (D) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:minHeight="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="Other (D)" />

            <TextView
                android:id="@+id/tv_other_d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="-7dp"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_unfold_ico"
                android:drawablePadding="10dp"
                android:gravity="center|end"
                android:text="3,555.00 Kip" />
        </LinearLayout>

        <!-- Expand Content -->
        <LinearLayout
            android:id="@+id/ll_other_expand_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_bottom_solid_f5f7fc"
            android:orientation="vertical"
            android:padding="15dp"
            android:visibility="visible">

            <!-- Overdue Principle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="Overdue Principal" />

                <TextView
                    android:id="@+id/tv_overdue_principal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:gravity="center|end"
                    android:text="3,555.00 Kip" />

            </LinearLayout>

            <!-- Overdue Interest -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="Overdue Interest" />

                <TextView
                    android:id="@+id/tv_overdue_interest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:gravity="center|end"
                    android:text="3,555.00 Kip" />

            </LinearLayout>

            <!-- Total -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="Total" />

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:gravity="center|end"
                    android:text="3,555.00 Kip" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>
