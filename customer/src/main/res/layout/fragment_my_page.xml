<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<!--    <data>-->
<!--        <variable-->
<!--            name="myLoanViewModel"-->
<!--            type="com.mobile.bnk.ui.main.fragment.myloan.MyLoanViewModel" />-->

<!--        <variable-->
<!--            name="summary"-->
<!--            type="com.mobile.bnk.model.loan.Summary" />-->

<!--    </data>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.fragment.myloan.MyLoanFragment"
        android:background="@null">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_red_gradient_height"
            android:background="@drawable/main_background_gradient"/>

        <!-- My Loan Fragment Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="10dp">

                <ImageView
                    android:layout_width="@dimen/height_50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_brand_bnkc_lao_leasing_white" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Capital Lao Leasing Co, Ltd"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/margin_18dp"
                    android:textStyle="bold"/>

                <ImageButton
                    android:id="@+id/btn_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:padding="10dp"
                    android:src="@drawable/ic_notification_white_ico" />

            </LinearLayout>

            <TextView
                style="@style/font_15_FFFFFF_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:text="@string/main_subtitle_001"
                android:gravity="center_vertical"
                app:drawableStartCompat="@drawable/ic_loan_in_use_ico" />

            <com.mobile.bnkcl.com.view.ShadowLayout
                android:id="@+id/ll_loan_item"
                android:layout_width="match_parent"
                android:minHeight="120dp"
                android:layout_height="wrap_content"
                app:shadowColor="@color/color_90a4ae_shadow"
                app:shadowDx="0dp"
                app:shadowDy="0dp"
                app:shadowRadius="4dp"
                app:shadowShape="rectangle"
                app:shadowSide="all"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="-10dp"
                >
                <include
                    android:id="@+id/request_menu"
                    layout="@layout/myloan_request_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.mobile.bnkcl.com.view.ShadowLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:fillViewport="true"
                android:overScrollMode="never">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Loan in use -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="4dp">

                        <TextView
                            style="@style/font15_263238_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/main_subtitle_002" />

                        <TextView
                            android:id="@+id/tv_loan_in_use_cnt"
                            style="@style/font13_ffffff_medium_only"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="6.5dp"
                            android:paddingLeft="6.5dp"
                            android:paddingTop="1.5dp"
                            android:paddingBottom="1.5dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"

                            android:enabled="true"
                            tools:text="2"/>
                    </LinearLayout>

                    <!-- Loan Item View Pager -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="240dp"
                        >

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/loan_view_pager"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="240dp"
                            android:clipToPadding="false"
                            android:clipChildren="false"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:overScrollMode="never"
                            tools:listitem="@layout/loan_item_layout"/>

                    </RelativeLayout>

                    <!-- Loan Item Indicator -->
                    <LinearLayout
                        android:id="@+id/ll_loan_indicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginTop="-10dp"/>

                    <!-- Banner Item View Pager -->
                    <com.mobile.bnkcl.com.view.CustomPager
                        android:id="@+id/banner_view_pager"
                        android:layout_width="match_parent"
                        android:layout_height="86dp"
                        android:clipToPadding="false"
                        android:clipChildren="false"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"/>

                    <!-- Banner Item Indicator -->
                    <LinearLayout
                        android:id="@+id/ll_banner_indicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:gravity="center"
                        android:orientation="horizontal" />

                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </RelativeLayout>
</layout>

