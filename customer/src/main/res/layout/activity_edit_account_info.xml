<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.mobile.bnkcl.ui.user.edit.EditAccountInfoViewModel" />

        <variable
            name="editAccountInfoViewModel"
            type="EditAccountInfoViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.user.edit.EditAccountInfoActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.mobile.bnkcl.com.view.ActionBar
                android:id="@+id/action_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f7fc"
                android:fillViewport="true"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layout_constraintTop_toBottomOf="@id/action_bar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_loading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" />

                        <ImageView
                            android:id="@+id/image_profile"
                            android:layout_width="128dp"
                            android:layout_height="128dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerCrop" />

                        <FrameLayout
                            android:id="@+id/fl_upload_ui"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/camera_white_ico" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_change_profile"
                                android:layout_width="128dp"
                                android:layout_height="128dp"
                                android:layout_gravity="center_horizontal"
                                android:alpha="0.6"
                                app:cardBackgroundColor="#D7191F"
                                app:cardCornerRadius="232dp">

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/camera_white_ico" />

                            </androidx.cardview.widget.CardView>

                        </FrameLayout>

                    </FrameLayout>


                    <LinearLayout
                        android:id="@+id/rl_signup_otp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="21dp"
                        android:background="@drawable/round_solid_ffffff_15"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="21dp"
                            android:layout_marginEnd="21dp"
                            android:layout_marginBottom="21dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ll_sign_up_user_info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="31dp"
                                    android:text="Personal Information" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:text="Name" />

                                <com.mobile.bnkcl.com.view.BnkEditText
                                    android:id="@+id/edt_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="1"
                                    android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                                    android:hint="Name in Latin"
                                    android:maxLength="50"
                                    android:paddingLeft="15dp"
                                    android:paddingTop="16dp"
                                    android:paddingRight="15dp"
                                    android:paddingBottom="16dp"
                                    android:singleLine="true"
                                    android:text=""
                                    tools:background="@drawable/round_solid_f3f6f7_8" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:text="Date of Birth" />

                                <LinearLayout
                                    android:id="@+id/ll_dob"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal"
                                    tools:background="@drawable/round_solid_f3f6f7_8">

                                    <com.mobile.bnkcl.com.view.BnkEditText
                                        android:id="@+id/edt_dob"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@null"
                                        android:clickable="true"
                                        android:focusable="true"
                                        android:hint="DD-MM-YYYY (31-01-1985)"
                                        android:inputType="date"
                                        android:maxLength="10"
                                        android:paddingStart="15dp"
                                        android:paddingTop="16dp"
                                        android:paddingEnd="15dp"
                                        android:paddingBottom="16dp"
                                        android:singleLine="true" />

                                    <ImageView
                                        android:id="@+id/iv_calendar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginEnd="15dp"
                                        android:src="@drawable/calendar_on_ico" />


                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:text="Identification Number" />

                                <LinearLayout
                                    android:id="@+id/ll_id_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal"
                                    tools:background="@drawable/round_solid_f3f6f7_8">

                                    <TextView
                                        android:id="@+id/tv_id_number"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginTop="16dp"
                                        android:layout_marginRight="15dp"
                                        android:layout_marginBottom="16dp"
                                        android:layout_weight="1"
                                        android:text="00000000000" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_wrap_additional_info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="21dp"
                                android:orientation="vertical">

                                <include
                                    android:id="@+id/lyt_address_info"
                                    layout="@layout/additional_information"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="-20dp"
                                    android:layout_marginEnd="-20dp" />

                                <TextView
                                    android:id="@+id/tv_job_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:text="Job Type (Optional)" />

                                <LinearLayout
                                    android:id="@+id/ll_job_type"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/round_stroke_e1e5ec_solid_ffffff_corner_8"
                                    android:gravity="center"
                                    android:paddingStart="15dp"
                                    android:paddingEnd="15dp">

                                    <TextView
                                        android:id="@+id/tv_occupation"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical"
                                        android:hint="Select"
                                        android:textColorHint="#cfd8dc"
                                        app:drawableEndCompat="@drawable/expand_more_ico" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="31dp"
                                        android:text="Lease Information" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dp"
                                        android:text="Account Number" />

                                    <com.mobile.bnkcl.com.view.BnkEditText
                                        android:id="@+id/edt_account_number"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/selector_edittext_bg"
                                        android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                                        android:drawableStart="@drawable/acc_number_ico"
                                        android:drawablePadding="10dp"
                                        android:hint="N/A"
                                        android:maxLength="50"
                                        android:paddingLeft="15dp"
                                        android:paddingTop="16dp"
                                        android:paddingRight="15dp"
                                        android:paddingBottom="16dp"
                                        android:singleLine="true"
                                        android:text="" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="21dp">

                                <Button
                                    android:id="@+id/btn_cancel"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/selector_d7191f_ffffee"
                                    android:text="Cancel" />

                                <Button
                                    android:id="@+id/btn_save"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/round_solid_e1e5ec_8"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:text="Save" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>