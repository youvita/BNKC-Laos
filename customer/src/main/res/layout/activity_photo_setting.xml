<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="photo_setting"
            type="com.mobile.bnkcl.ui.user.photo.PhotoViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_solid_ffffff_15"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            style="@style/font15_263238_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:drawablePadding="17dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:letterSpacing="0.01"
            android:onClick="@{() -> photo_setting.onGallery()}"
            android:text="Choose from gallery" />

        <TextView
            style="@style/font15_263238_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:drawablePadding="17dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:letterSpacing="0.01"
            android:onClick="@{() -> photo_setting.onCamera()}"
            android:text="Take a photo" />

    </LinearLayout>

</layout>