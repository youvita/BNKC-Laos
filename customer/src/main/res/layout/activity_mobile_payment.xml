<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.mobile.bnkcl.ui.mobile_payment.MobilePaymentViewModel" />

        <variable
            name="mobilePaymentViewModel"
            type="MobilePaymentViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.mobile_payment.MobilePaymentActivity">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/comm_collapse_toolbar" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_solid_ffffff_15"
                android:fillViewport="true"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="21dp"
                    android:paddingTop="30dp"
                    android:paddingRight="21dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/? Account Number" />

                    <LinearLayout
                        android:id="@+id/ll_wing_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/selector_viewgroup_bg"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/ic_client_info_ico" />

                        <com.mobile.bnkcl.com.view.BnkEditText
                            android:id="@+id/edt_wing_account"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="0000-0000"
                            android:inputType="number"
                            android:maxLength="9"
                            android:paddingStart="10dp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:singleLine="true"
                            android:textColorHint="#cfd8dc" />

                        <ImageView
                            android:id="@+id/iv_send_code"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:clickable="false"
                            android:src="@drawable/ic_otp_send_off_ico" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="31dp"
                        android:text="/? Code (SMS)" />

                    <LinearLayout
                        android:id="@+id/ll_wing_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/selector_viewgroup_bg"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/ic_lock_ico" />

                        <com.mobile.bnkcl.com.view.BnkEditText
                            android:id="@+id/edt_wing_code"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:enabled="false"
                            android:hint="XXX-XXX"
                            android:inputType="number"
                            android:maxLength="7"
                            android:paddingStart="10dp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:singleLine="true"
                            android:textColorHint="#cfd8dc" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:background="#ffffff"
                android:paddingBottom="21dp">

                <Button
                    android:id="@+id/btn_pay"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:text="PAY" />

            </LinearLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>