<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="otp"
            type="com.mobile.bnkcl.ui.otp.OtpActivity" />

        <variable
            name="enableButton"
            type="Boolean"/>

        <variable
            name="otpViewModel"
            type="com.mobile.bnkcl.ui.otp.OtpViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        bind:context=".ui.signup.SignUpActivity"
        android:background="@color/color_f5f7fc"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/ll_wrap_content">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/color_f5f7fc"
            >

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@{otpViewModel.setUpImageView(otpViewModel.uiMode)}"
                android:layout_centerVertical="true"
                android:layout_marginStart="21dp"/>
            <TextView
                android:id="@+id/tv_title_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{otpViewModel.setUpTextView(otpViewModel.uiMode)"
                android:layout_centerInParent="true"
                style="@style/font_18_263238_bold"/>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_badge_key_gray"
                android:visibility="@{otpViewModel.setUpVisibilityView(otpViewModel.uiMode) ? View.VISIBLE : View.GONE}"
                android:layout_marginTop="15dp"/>
            <LinearLayout
                android:id="@+id/ll_step_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:visibility="@{!otpViewModel.setUpVisibilityView(otpViewModel.uiMode) ? View.VISIBLE : View.GONE}"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/iv_step1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_step_otp_off"/>
                    <TextView
                        android:id="@+id/tv_step1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sign_up_01"
                        style="@style/font13_d7191f_bold"
                        android:gravity="center"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>


                <View
                    android:layout_width="60dp"
                    android:layout_height="1dp"
                    android:background="@color/color_90A4AE"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="24dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/iv_step2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_step_personal_info_on"/>
                    <TextView
                        android:id="@+id/tv_step2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sign_up_02"
                        style="@style/font_13_90A4AE_normal"
                        android:gravity="center"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>



            </LinearLayout>

            <!--sign up OTP -->
            <RelativeLayout
                android:id="@+id/rl_signup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="21dp"
                android:visibility="visible"
                android:background="@drawable/round_solid_ffffff_15">
                <ScrollView
                    android:id="@+id/sv_signup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:scrollbars="none"
                    android:layout_above="@id/ll_btn_continue">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="31dp"
                            android:text="@string/sign_up_03"
                            style="@style/font21_263238_medium"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/sign_up_04"
                            style="@style/font_15_263238_regular"
                            android:gravity="center"
                            />

                        <LinearLayout
                            android:id="@+id/ll_phone_no"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/selector_viewgroup_bg"
                            android:layout_marginTop="21dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="67dp"
                                android:layout_height="match_parent"
                                android:text="+855"
                                style="@style/font15_c4d0d6_medium_en"
                                android:gravity="center"
                                android:layout_marginStart="1dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginBottom="1dp"
                                android:background="@drawable/round_solid_f3f6f7_8_left"/>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="1dp"
                                android:layout_marginBottom="1dp"
                                android:background="@color/color_e1e5ec"/>

                            <com.mobile.bnkcl.com.view.BnkEditText
                                android:id="@+id/edt_phonenumber"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:paddingStart="15dp"
                                android:hint="00-000-000"
                                android:textColorHint="#cfd8dc"
                                style="@style/font15_radio_medium_not_km"
                                android:background="@null"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:maxLength="11"
                                android:singleLine="true"
                                android:inputType="number"/>
                            <ImageView
                                android:id="@+id/iv_send_otp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_otp_send_off_ico"
                                android:layout_marginRight="15dp"
                                android:clickable="false"
                                android:onClick="@{(v) -> otpViewModel.sendOtp()}"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="21dp">
                            <TextView

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/sign_up_05"
                                style="@style/font13_263238_medium"
                                />

                            <TextView
                                android:id="@+id/tv_countdown"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="00:00"
                                style="@style/font13_cfd8dc_medium"
                                android:gravity="end"
                                android:layout_gravity="right"
                                />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_opt_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_viewgroup_bg"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_lock_ico"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="10dp"
                                />


                            <com.mobile.bnkcl.com.view.BnkEditText
                                android:id="@+id/edt_otp"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                style="@style/font15_radio_medium_not_km"
                                android:hint="XXX-XXX"
                                android:textColorHint="#cfd8dc"
                                android:background="@null"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:layout_marginEnd="10dp"
                                android:maxLength="7"
                                android:singleLine="true"
                                android:inputType="number"/>

                            <TextView
                                android:id="@+id/tv_correct"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/sign_up_06"
                                style="@style/font13_d7191f_bold"
                                android:gravity="center"
                                android:drawablePadding="5dp"
                                android:drawableRight="@drawable/ic_info_red_ico"
                                android:layout_marginRight="15dp"
                                android:visibility="gone"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="21dp">
                            <TextView
                                android:id="@+id/tv1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sign_up_07"
                                style="@style/font15_cfd8dc_regular"
                                android:gravity="center"
                                />
                            <TextView
                                android:id="@+id/tv_resend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sign_up_08"
                                android:textSize="15sp"
                                android:textColor="@{otp.sendOtp ? @color/colorPrimary : @color/color_cfd8dc}"
                                android:gravity="center"
                                android:onClick="@{(v) -> otpViewModel.resendOtp()}"
                                />
                        </LinearLayout>

                    </LinearLayout>


                </ScrollView>
                <LinearLayout
                    android:id="@+id/ll_btn_continue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:gravity="bottom"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="21dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:id="@+id/ll_agreement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp"
                        android:visibility="visible">

                        <CheckBox
                            android:id="@+id/cb_agreement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/selector_radio_botton_solid_grey"
                            android:layout_marginEnd="10dp"
                            android:clickable="true"
                            android:checked="false"
                            android:focusable="true"
                            android:onClick="@{(v) -> otpViewModel.agreementCheckBoxClick()}"/>
                        <TextView
                            android:id="@+id/tv_agree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/sign_up_28"
                            style="@style/font15_cfd8dc_regular_agreement"
                            android:onClick="@{(v) -> otpViewModel.agreementViewClick()}"/>


                    </LinearLayout>
<!--                    <LinearLayout-->
<!--                        android:id="@+id/btn_continue"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:gravity="center"-->
<!--                        android:layout_height="50dp"-->
<!--                        android:background="@drawable/round_solid_e1e5ec_8">-->
<!--                        <TextView-->
<!--                            android:id="@+id/tv_continue"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="@string/sign_up_09"-->
<!--                            style="@style/font14_90A4AE_medium"-->
<!--                            />-->
<!--                    </LinearLayout>-->

<!--                    <com.mobile.bnkcl.com.view.ValidateButton-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="50dp"-->
<!--                        app:is_active="true"-->
<!--                        />-->

<!--                    <com.mobile.bnkcl.com.view.ValidateButton-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_marginTop="15dp"-->
<!--                        app:buttonText="@string/loan_calculator"-->
<!--                        app:textAllCaps="true"-->
<!--                        app:is_active="true"-->
<!--                        android:layout_height="50dp"/>-->

                    <com.mobile.bnkcl.com.view.ValidateButton
                        android:id="@+id/btn_calculate"
                        android:layout_width="match_parent"
                        app:buttonText="Login"
                        app:is_active="true"
                        android:layout_height="50dp"
                        android:onClick="@{(v) -> otpViewModel.reqLogin()}"/>

                </LinearLayout>


            </RelativeLayout>


            <!-- end of sign up OTP-->

        </LinearLayout>

    </LinearLayout>
</layout>
