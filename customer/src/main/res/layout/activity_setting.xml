<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.mobile.bnkcl.ui.setting.SettingViewModel" />

        <variable
            name="settingViewModel"
            type="SettingViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.setting.SettingActivity">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f7fc"
            tools:context=".ui.settiing.SettingsActivity">

            <include layout="@layout/comm_collapse_toolbar" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_solid_ffffff_15"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <com.mobile.bnkcl.com.view.ShadowLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="31dp"
                    app:shadowColor="#3090a4ae"
                    app:shadowDx="0dp"
                    app:shadowDy="0dp"
                    app:shadowRadius="8dp"
                    app:shadowShape="rectangle"
                    app:shadowSide="all">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_stroke_e1e5ec_solid_ffffff_corner_10"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="15dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/settings_push_notif_ico"
                                android:drawablePadding="10dp"
                                android:gravity="center_vertical"
                                android:text="Push Notification" />

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/toggle_user"
                                android:layout_width="wrap_content"
                                android:layout_height="21dp"
                                android:checked="true"
                                android:theme="@style/SettingSwitch"
                                android:thumb="@drawable/switch_thumb_selector"
                                app:track="@drawable/switch_track_selector" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:background="#eef5f8" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="15dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/settings_lock_ico"
                                android:drawablePadding="10dp"
                                android:gravity="center_vertical"
                                android:text="Reset PIN" />

                            <TextView
                                android:id="@+id/tv_reset_pin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableRight="@drawable/right_red_arrow_ico"
                                android:gravity="center"
                                android:text="RESET" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#eef5f8" />

                    </LinearLayout>

                </com.mobile.bnkcl.com.view.ShadowLayout>

            </androidx.core.widget.NestedScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/brand_bnkc_below" />

                <TextView
                    android:id="@+id/tv_app_version"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textColor="#90A4AE"
                    android:textSize="13sp"
                    tools:text="Version 1.0" />
            </LinearLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>