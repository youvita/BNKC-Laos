<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_stroke_e1e5ec_solid_ffffff_corner_10"
        android:baselineAligned="false"
        android:padding="@dimen/padding_21dp"
        android:weightSum="3">

        <!-- Application -->
        <LinearLayout
            android:id="@+id/ll_menu1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_5dp"
            android:paddingRight="@dimen/padding_5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:duplicateParentState="true">

                <ImageView
                    android:id="@+id/img_menu1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:duplicateParentState="true"
                    android:src="@drawable/selector_lease_app" />

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_alignEnd="@id/img_menu1"
                    android:layout_alignBottom="@id/img_menu1"
                    android:layout_marginEnd="-5dp"
                    android:duplicateParentState="true"
                    android:src="@drawable/selector_red_check" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_menu_title1"
                style="@style/font10_d7191f_medium_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:gravity="center"
                android:minHeight="20dp"
                android:paddingBottom="@dimen/padding_2dp"
                android:text="@string/my_loan_menu_001" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="@dimen/padding_10dp"
                android:layout_marginTop="@dimen/margin_2dp"
                android:layout_marginEnd="@dimen/padding_10dp"
                android:background="@drawable/selector_background_d7191f_263238_cfd8dc"
                android:duplicateParentState="true" />

        </LinearLayout>

        <!-- Screening -->
        <LinearLayout
            android:id="@+id/ll_menu2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_5dp"
            android:paddingRight="@dimen/padding_5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:duplicateParentState="true">

                <ImageView
                    android:id="@+id/img_menu2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:duplicateParentState="true"
                    android:src="@drawable/selector_lease_screening"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_alignEnd="@id/img_menu2"
                    android:layout_alignBottom="@id/img_menu2"
                    android:layout_marginEnd="-5dp"
                    android:duplicateParentState="true"
                    android:src="@drawable/selector_red_check"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_menu_title2"
                style="@style/font10_d7191f_medium_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:gravity="center"
                android:minHeight="20dp"
                android:paddingBottom="@dimen/padding_2dp"
                android:text="Screening" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="@dimen/padding_10dp"
                android:layout_marginTop="@dimen/margin_2dp"
                android:layout_marginEnd="@dimen/padding_10dp"
                android:background="@drawable/selector_background_d7191f_263238_cfd8dc"
                android:duplicateParentState="true" />

        </LinearLayout>

        <!-- Result -->
        <LinearLayout
            android:id="@+id/ll_menu3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_5dp"
            android:paddingRight="@dimen/padding_5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:duplicateParentState="true">

                <ImageView
                    android:id="@+id/img_menu3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:duplicateParentState="true"
                    android:src="@drawable/selector_lease_result"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_alignEnd="@id/img_menu3"
                    android:layout_alignBottom="@id/img_menu3"
                    android:layout_marginEnd="-5dp"
                    android:duplicateParentState="true"
                    android:src="@drawable/selector_red_check"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_menu_title3"
                style="@style/font10_d7191f_medium_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:gravity="center"
                android:minHeight="20dp"
                android:paddingBottom="@dimen/padding_2dp"
                android:text="Result" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="@dimen/padding_10dp"
                android:layout_marginTop="@dimen/margin_2dp"
                android:layout_marginEnd="@dimen/padding_10dp"
                android:background="@drawable/selector_background_d7191f_263238_cfd8dc"
                android:duplicateParentState="true" />

        </LinearLayout>

    </LinearLayout>

</layout>