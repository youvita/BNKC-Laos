<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.mobile.bnkcl.data.response.lease.transaction_history.TransactionHistoryData"/>
        <variable
            name="item"
            type="TransactionHistoryData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_5dp"
            android:paddingBottom="@dimen/padding_5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_stroke_e1e5ec_solid_ffffff_corner_8"
                android:orientation="vertical"
                android:padding="@dimen/padding_10dp"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:id="@+id/ll_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    tools:ignore="UseCompoundDrawables">

                    <TextView
                        android:id="@+id/tv_tran_date"
                        style="@style/font15_263238_medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/padding_10dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        app:drawableStartCompat="@drawable/ic_calendar_grey_ico"
                        tools:text="04/03/19" />

                    <ImageView
                        android:id="@+id/iv_item_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_unfold_ico"
                        android:paddingStart="@dimen/padding_10dp"
                        android:paddingEnd="@dimen/padding_10dp"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

                <!-- Expand Content -->
                <LinearLayout
                    android:id="@+id/ll_expand_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_1dp"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:layout_marginBottom="@dimen/margin_10dp"
                        android:background="@color/color_eef5f8" />

                    <!-- Payment Date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/font15_90a4ae_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_5dp"
                            android:text="@string/tran_history_004" />

                        <TextView
                            android:id="@+id/tv_payment_date"
                            style="@style/font15_263238_medium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="3,280,000"
                            tools:text="04/03/19" />
                    </LinearLayout>

                    <!-- Paid Amount -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_8dp"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/font15_90a4ae_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_5dp"
                            android:text="@string/tran_history_003" />

                        <TextView
                            android:id="@+id/tv_paid_amount"
                            style="@style/font15_263238_medium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="3,280,000"
                            tools:text="265,000" />
                    </LinearLayout>

                    <!-- Penalty -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_8dp"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/font15_90a4ae_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_5dp"
                            android:text="@string/loan_manage_015" />

                        <TextView
                            android:id="@+id/tv_penalty"
                            style="@style/font15_263238_medium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="3,280,000"
                            tools:text="224,867" />
                    </LinearLayout>

                    <!-- Interest -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_8dp"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/font15_90a4ae_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_5dp"
                            android:text="@string/loan_manage_013" />

                        <TextView
                            android:id="@+id/tv_interest"
                            style="@style/font15_263238_medium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="3,280,000"
                            tools:text="3,280,000" />
                    </LinearLayout>

                    <!-- Principle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_8dp"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/font15_90a4ae_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_5dp"
                            android:text="@string/loan_manage_012" />

                        <TextView
                            android:id="@+id/tv_principle"
                            style="@style/font15_263238_medium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="3,280,000"
                            tools:text="3,800,000" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>