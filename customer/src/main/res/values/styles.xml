<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Setting switch -->
    <style name="SettingSwitch" parent="Theme.AppCompat.Light">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">#D7191F</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#D7191F</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">#D7191F</item>

        <item name="track">@drawable/switch_track_selector</item>
        <item name="android:thumb">@drawable/switch_thumb_selector</item>
        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->
    </style>

</resources>